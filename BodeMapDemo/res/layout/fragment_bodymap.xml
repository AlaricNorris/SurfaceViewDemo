<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bodymap="http://schemas.android.com/apk/res/com.example.alaricnorris.bodemapdemo"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.example.alaricnorris.bodemapdemo.BodyMap
        android:id="@+id/a"
        android:layout_width="300dip"
        android:layout_height="300dip"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:scaleType="fitCenter"
        android:src="@drawable/avatar_female_front"
        bodymap:XCoordinates="@array/XCoordinates"
        bodymap:YCoordinates="@array/YCoordinates"
        bodymap:detectRegionColor="@android:color/holo_green_light"
        bodymap:image="@drawable/body_male_front"
        bodymap:imagesLayers="@array/imagesLayers"
        bodymap:showdetectRegion="false" />

</RelativeLayout>